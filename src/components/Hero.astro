---

const useGradient = true; // set false to remove gradient background
---
<section class={`relative p-6 ${useGradient ? 'bg-gradient-to-br from-green-50 to-white' : 'bg-white'}`}>

    <div class="max-w-7xl mx-auto grid md:grid-cols-2 gap-14 items-center">

        <!-- LEFT TEXT SECTION -->
        <div class="animate-fadeInUp">

            <div class="relative animate-fadeInUp delay-150 block md:hidden">
                <!-- using your uploaded image path; replace if you moved the file -->
                <img
                        src="/hero-homeopathy.png"
                        alt="Clinic Image"
                        class="rounded-3xl shadow-xl w-full object-cover"
                        style="min-height: 300px; max-height: 520px;"
                />

                <!-- Floating Badge -->
                <div class="absolute -bottom-8 bg-white border border-gray-200 rounded-xl p-4 shadow-lg flex items-center gap-3 transform hover:scale-[1.02] transition">
                    <img alt="school" src="/icons/school_map_green.svg" class="w-8 h-8" />
                    <div>
                        <p class="font-semibold text-gray-800">BHMS Qualified</p>
                        <p class="text-gray-500 text-sm">Experienced Practitioner</p>
                    </div>
                </div>
            </div>

            <!-- Top Badge -->
            <div class="flex items-center gap-2 text-green-600 font-semibold mb-4">
                <img alt="school" src="/icons/school_map_green.svg" class="w-8 h-8" />
                BHMS Certified
            </div>

            <!-- Main Heading -->
            <h1 class="text-4xl md:text-6xl font-extrabold leading-tight text-gray-900">
                Natural Healing with <br />
                <span class="text-green-600">Dr. Aanchal Tyagi</span>
            </h1>

            <!-- Subtext -->
            <p class="mt-5 text-lg text-gray-600 md:w-11/12 leading-relaxed">
                Experience personalized homeopathic treatment in Indirapuram.
                Gentle, effective, and natural solutions for your health concerns.
            </p>

            <!-- Buttons -->
            <div class="flex items-center space-x-4 mt-4">

                <a
                        href="#contact"
                        class=" bg-green-600 text-white px-6 py-2 rounded-lg font-semibold hover:bg-green-700 transition shadow"
                >
                    <div class="flex items-center space-x-2 book-appointment-btn">
                        <img src="/icons/book_appointment.svg" class="w-6 h-6 hidden lg:block" />
                        <span class="text-sm text-center">Book Appointment</span>
                    </div>
                </a>

                <a
                        href="#contact"
                        class=" bg-green-600 text-white px-6 py-2 rounded-lg font-semibold hover:bg-green-700 transition shadow"
                >
                    <div class="flex items-center space-x-2">
                        <img src="/icons/phone_white.svg" class="w-6 h-6 hidden md:block" />
                        <span class="text-sm text-center">Contact Us</span>
                    </div>
                </a>
            </div>


            <!-- Info Cards -->
            <div class="mt-10 grid sm:grid-cols-3 gap-4">
                <!-- Card 1 -->
                <div class="bg-green-50 border border-green-100 p-4 rounded-xl shadow-sm hover:shadow-md transition transform hover:-translate-y-1 animate-fadeInUp delay-100">
                    <div class="flex items-center gap-2 text-green-700 font-semibold">
                        <img alt="clock" src="/icons/clock_square_green.svg" class="w-4 h-4 fill-green-600" />
                        6 Days a Week
                    </div>
                    <p class="text-gray-500 text-sm mt-1">12–2PM, 6–8PM</p>
                </div>

                <!-- Card 2 -->
                <div class="bg-green-50 border border-green-100 p-4 rounded-xl shadow-sm hover:shadow-md transition transform hover:-translate-y-1 animate-fadeInUp delay-200">
                    <div class="flex items-center gap-2 text-green-700 font-semibold">
                        <img alt="phone" src="/icons/phone_green.svg" class="w-4 h-4 fill-green-600" />
                        +91-9953154257
                    </div>
                    <p class="text-gray-500 text-sm mt-1">Call 10AM–8PM</p>
                </div>

                <!-- Card 3 -->
                <div class="bg-green-50 border border-green-100 p-4 rounded-xl shadow-sm hover:shadow-md transition transform hover:-translate-y-1 animate-fadeInUp delay-300">
                    <div class="flex items-center gap-2 text-green-700 font-semibold">
                        <img alt="phone" src="/icons/map_green.svg" class="w-4 h-4 fill-green-600" />
                        Gyan Khand
                    </div>
                    <p class="text-gray-500 text-sm mt-1">Indirapuram</p>
                </div>
            </div>

        </div>

        <!-- RIGHT IMAGE SECTION -->
        <div class="relative animate-fadeInUp delay-150 hidden md:block">
            <!-- using your uploaded image path; replace if you moved the file -->
            <img
                    src="/hero-homeopathy.png"
                    alt="Clinic Image"
                    class="rounded-3xl shadow-xl w-full object-cover"
                    style="min-height: 300px; max-height: 520px;"
            />

            <!-- Floating Badge -->
            <div class="absolute -bottom-8 bg-white border border-gray-200 rounded-xl p-4 shadow-lg flex items-center gap-3 transform hover:scale-[1.02] transition">
                <img alt="school" src="/icons/school_map_green.svg" class="w-8 h-8" />
                <div>
                    <p class="font-semibold text-gray-800">BHMS Qualified</p>
                    <p class="text-gray-500 text-sm">Experienced Practitioner</p>
                </div>
            </div>
        </div>

    </div>

    <style>
        /* small fade-in + upward animation */
        @keyframes fadeInUp {
            from { opacity: 0; transform: translateY(18px); }
            to   { opacity: 1; transform: translateY(0); }
        }
        .animate-fadeInUp { animation: fadeInUp 0.7s ease-out both; }
        .delay-100 { animation-delay: 0.08s; }
        .delay-150 { animation-delay: 0.14s; }
        .delay-200 { animation-delay: 0.18s; }
        .delay-300 { animation-delay: 0.28s; }

        /* improve image rendering on small screens */
        @media (max-width: 640px) {
            img.rounded-3xl { border-radius: 1rem; }
        }
    </style>

</section>
